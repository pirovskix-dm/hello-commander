<Window
    CanResize="False"
    ExtendClientAreaToDecorationsHint="True"
    Height="60"
    SystemDecorations="None"
    Title="HcEditNameWindow"
    Width="400"
    WindowStartupLocation="CenterOwner"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="HelloCommander.HcApp.Windows.Dialogs.HcEditNameWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0" Name="HcEditNameTextBlock" />
        <Grid ColumnDefinitions="Auto,*,Auto" Grid.Row="1">
            <Button
                Content="X"
                Grid.Column="0"
                Name="HcEditNameCancelButton" />
            <TextBox Grid.Column="1" Name="HcEditNameTextBox" />
            <Button
                Content="V"
                Grid.Column="2"
                Name="HcEditNameOkButton" />
        </Grid>
    </Grid>

</Window>